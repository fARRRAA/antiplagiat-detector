<Window x:Class="Plagiat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plagiat"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:converters="clr-namespace:Plagiat"

        mc:Ignorable="d"
        Title="Антиплагиат-Помощник" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF3F3F46">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Панель инструментов -->
        <hc:UniformSpacingPanel Grid.Row="0" Spacing="10" Margin="15,10" Orientation="Horizontal">
            <Button x:Name="NewProjectButton" 
                    Content="Новый проект" 
                    Style="{StaticResource ButtonPrimary}"
                    Click="NewProjectButton_Click"/>
            
            <Button x:Name="OpenProjectButton" 
                    Content="Открыть проект"
                    Click="OpenProjectButton_Click"/>
            
            <Button x:Name="SaveProjectButton" 
                    Content="Сохранить проект"
                    Click="SaveProjectButton_Click"/>

            <Separator Width="1" Margin="5,0" 
           VerticalAlignment="Stretch" 
           Background="Gray"/>
            <Button x:Name="ImportDocumentButton" 
                    Content="Импорт документа"
                    Style="{StaticResource ButtonSuccess}"
                    Click="ImportDocumentButton_Click"/>
            
            <Button x:Name="CheckPlagiarismButton" 
                    Content="Проверить плагиат"
                    Style="{StaticResource ButtonWarning}"
                    Click="CheckPlagiarismButton_Click"
                    IsEnabled="False"/>
            
            <Button x:Name="ParaphraseAllButton" 
                    Content="Перефразировать всё"
                    Style="{StaticResource ButtonInfo}"
                    Click="ParaphraseAllButton_Click"
                    IsEnabled="False"/>
            
            <Button x:Name="FindCitationsManuallyButton" 
                    Content="🔍 Найти цитаты"
                    Style="{StaticResource ButtonPrimary}"
                    Click="FindCitationsManuallyButton_Click"
                    IsEnabled="False"/>
        </hc:UniformSpacingPanel>
        
        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Левая панель - Проекты и документы -->
            <hc:Card Grid.Column="0" Margin="0,0,0,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Проекты и документы" FontWeight="Bold" FontSize="14" Margin="15,15,15,10"/>
                    
                    <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,15">
                        <TreeView x:Name="ProjectsTreeView" 
                                  SelectedItemChanged="ProjectsTreeView_SelectedItemChanged">
                        </TreeView>
                    </hc:ScrollViewer>
                </Grid>
            </hc:Card>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
            
            <!-- Центральная панель - Редактор документа -->
            <hc:Card Grid.Column="2" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовок документа и статистика -->
                    <Grid Grid.Row="0" Margin="15,15,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="DocumentTitleTextBlock" 
                                       Text="Загрузите документ для начала работы" 
                                       FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="DocumentInfoTextBlock" 
                                       Text="" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <hc:CircleProgressBar Grid.Column="1" x:Name="UniquenessProgressBar" 
                                              Value="0" Maximum="100" 
                                              Width="60" Height="60"
                                              ShowText="True" 
                                              Text="{Binding Value, RelativeSource={RelativeSource Self}, StringFormat={}{0:F0}%}"
                                              Visibility="Collapsed"/>
                    </Grid>
                    
                    <!-- Текстовый редактор -->
                    <ScrollViewer Grid.Row="1" Margin="15,0,15,10" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <!-- ВРЕМЕННО: Заменяем на обычный TextBox для диагностики -->
                        <TextBox x:Name="DocumentTextBox" 
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 FontFamily="Segoe UI"
                                 FontSize="14"
                                 TextChanged="DocumentTextBox_TextChanged"
                                 AllowDrop="True"
                                 Drop="DocumentTextBox_Drop"
                                 DragEnter="DocumentTextBox_DragEnter"
                                 MinHeight="300"
                                 TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"/>
                        
                        <!-- Оригинальный RichTextBox (закомментирован для тестирования)
                        <RichTextBox x:Name="DocumentRichTextBox" 
             AcceptsReturn="True"
             AcceptsTab="True"
             FontFamily="Segoe UI"
             FontSize="14"
             TextChanged="DocumentRichTextBox_TextChanged"
             AllowDrop="True"
             Drop="DocumentRichTextBox_Drop"
             DragEnter="DocumentRichTextBox_DragEnter"
             MinHeight="300"
             HorizontalScrollBarVisibility="Auto"
             VerticalScrollBarVisibility="Auto">
                        </RichTextBox>
                        -->
                    </ScrollViewer>
                    
                    <!-- Панель статуса -->
                    <Border Grid.Row="2" BorderThickness="0,1,0,0">
                        <Grid Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock x:Name="StatusTextBlock" 
                                           Text="Готов к работе" 
                                           VerticalAlignment="Center"/>
                                <hc:LoadingIndicator x:Name="LoadingIndicator" 
                                                     Width="16" Height="16" 
                                                     Margin="10,0,0,0"
                                                     Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="WordCountTextBlock" 
                                           Text="Слов: 0" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="CharCountTextBlock" 
                                           Text="Символов: 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </hc:Card>
            
            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
            
            <!-- Правая панель - Результаты проверки -->
            <hc:Card Grid.Column="4" Padding="0">
                <hc:TabControl TabStripPlacement="Top">
                    <!-- Вкладка результатов плагиата -->
                    <hc:TabItem Header="Плагиат">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Статистика плагиата -->
                            <StackPanel Grid.Row="0" Margin="15,15,15,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Rectangle Width="12" Height="12" Fill="Red" Margin="0,0,5,0"/>
                                    <TextBlock Text="Критично: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="CriticalCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Rectangle Width="12" Height="12" Fill="Orange" Margin="0,0,5,0"/>
                                    <TextBlock Text="Внимание: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="WarningCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="12" Height="12" Fill="Green" Margin="0,0,5,0"/>
                                    <TextBlock Text="Допустимо: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="AcceptableCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Список результатов -->
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,15">
                                <ListBox x:Name="PlagiarismResultsListBox" 
         SelectionChanged="PlagiarismResultsListBox_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8" Margin="2" CornerRadius="4">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Level, Converter={StaticResource PlagiarismLevelToColorConverter}}"/>
                                                </Border.Background>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding SimilarityPercentage, StringFormat='Совпадение: {0:F1}%'}" 
                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding SourceUrl}" 
                               TextTrimming="CharacterEllipsis"
                               FontSize="12" 
                               Opacity="0.8"/>
                                                    <TextBlock Text="{Binding MatchedText}" 
                               TextWrapping="Wrap" 
                               FontSize="11"
                               MaxHeight="40"
                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </hc:ScrollViewer>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка цитат -->
                    <hc:TabItem Header="Цитаты">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Найденные цитаты" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,10">
                                <ListBox x:Name="CitationsListBox">
                                </ListBox>
                            </hc:ScrollViewer>
                            
                            <ComboBox Grid.Row="2" x:Name="CitationStyleComboBox" 
                                      Margin="15,0,15,15"
                                      SelectionChanged="CitationStyleComboBox_SelectionChanged">
                                <ComboBoxItem Content="ГОСТ" Tag="GOST" IsSelected="True"/>
                                <ComboBoxItem Content="APA" Tag="APA"/>
                                <ComboBoxItem Content="MLA" Tag="MLA"/>
                                <ComboBoxItem Content="Chicago" Tag="Chicago"/>
                                <ComboBoxItem Content="Harvard" Tag="Harvard"/>
                                <ComboBoxItem Content="Vancouver" Tag="Vancouver"/>
                            </ComboBox>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка библиографии -->
                    <hc:TabItem Header="Библиография">
    <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Список литературы" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,10">
                                <ListBox x:Name="BibliographyListBox">
                                </ListBox>
                            </hc:ScrollViewer>
                            
                            <Button Grid.Row="2" x:Name="ExportBibliographyButton" 
                                    Content="Экспортировать библиографию"
                                    Margin="15,0,15,15"
                                    Click="ExportBibliographyButton_Click"/>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка диагностики -->
                    <hc:TabItem Header="🔍 Диагностика">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Лог диагностики поиска цитат" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <TextBox x:Name="DiagnosticTextBox" 
                                     Grid.Row="1"
                                     Margin="15,0,15,10"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Background="#F5F5F5"
                                     Text="Здесь будет отображаться диагностическая информация поиска цитат..."/>
                            
                            <Button Grid.Row="2" x:Name="ClearDiagnosticButton" 
                                    Content="Очистить лог"
                                    Margin="15,0,15,15"
                                    Click="ClearDiagnosticButton_Click"/>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка перефразировки -->
                    <hc:TabItem Header="✨ Перефразировка">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Произвольная перефразировка текста" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <!-- Область ввода текста -->
                            <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="8" Margin="15,0,15,10" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                        <TextBlock Text="Введите текст для перефразировки:" FontWeight="SemiBold"/>
                                        <TextBlock Text="💡 Горячие клавиши: Ctrl+Enter - перефразировать, Ctrl+Delete - очистить" 
                                                   FontSize="10" 
                                                   Foreground="#7F8C8D" 
                                                   FontStyle="Italic"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <TextBox x:Name="ParaphraseInputTextBox" 
                                             Grid.Row="1"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Disabled"
                                             FontSize="12"
                                             Padding="10"
                                             MinHeight="200"
                                             Background="White"
                                             BorderBrush="#DDD"
                                             BorderThickness="1"
                                             Margin="0,0,0,15"
                                             Text="Введите здесь текст, который хотите перефразировать..."
                                             Foreground="Gray"
                                             GotFocus="ParaphraseInputTextBox_GotFocus"
                                             LostFocus="ParaphraseInputTextBox_LostFocus"
                                             KeyDown="ParaphraseInputTextBox_KeyDown"/>
                                    
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="StartParaphraseButton" 
                                                Content="🔄 Перефразировать"
                                                Padding="15,8"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Background="#3498DB"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Click="StartParaphraseButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="8" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#BDC3C7"/>
                                                            <Setter Property="Foreground" Value="#7F8C8D"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <Button x:Name="ClearParaphraseButton" 
                                                Content="🗑️ Очистить"
                                                Padding="15,8"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Background="#95A5A6"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Margin="10,0,0,0"
                                                Click="ClearParaphraseButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="8" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#7F8C8D"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Индикатор загрузки -->
                            <StackPanel Grid.Row="2" x:Name="ParaphraseLoadingPanel" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="15,0,15,15"
                                        Visibility="Collapsed">
                                <hc:LoadingCircle Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Генерирую варианты перефразировки..." 
                                           VerticalAlignment="Center"
                                           FontStyle="Italic"
                                           Foreground="#7F8C8D"/>
                            </StackPanel>
                        </Grid>
                    </hc:TabItem>
                </hc:TabControl>
            </hc:Card>
        </Grid>
        
        <!-- Строка состояния -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="AppStatusTextBlock" Text="Готов к работе"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="VersionTextBlock" Text="v1.0.0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
