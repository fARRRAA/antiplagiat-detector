<Window x:Class="Plagiat.Views.MultiParaphraseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Перефразирование фрагментов" Height="750" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#2C3E50"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="900">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок и прогресс -->
        <Border Grid.Row="0" Background="#34495E" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           x:Name="TitleTextBlock" 
                           Text="🔄 Перефразирование" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="#ECF0F1"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ProgressTextBlock" 
                               Text="Фрагмент 1 из 5" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               Foreground="#BDC3C7"
                               MinWidth="120"/>
                    <Border Background="#2C3E50" CornerRadius="6" Padding="3" MinWidth="180">
                        <ProgressBar x:Name="ProgressBar" 
                                     Height="14" 
                                     Minimum="0" 
                                     Maximum="100" 
                                     Value="20"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#3498DB"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="🔄 Генерация..." 
                               FontSize="12" 
                               Foreground="#BDC3C7"
                               Margin="0,0,10,0"/>
                    <hc:LoadingCircle x:Name="LoadingIndicator" 
                                      Width="16" 
                                      Height="16" 
                                      Visibility="Visible"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Левая колонка - Исходный текст -->
            <Border Grid.Column="0" Background="#34495E" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="📄 Исходный текст" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,10" 
                               Foreground="#ECF0F1"/>
                    
                    <Border Grid.Row="1" 
                            Background="#ECF0F1" 
                            CornerRadius="6" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12" MaxHeight="300">
                            <TextBlock x:Name="OriginalTextBox" 
                                       Text="Исходный текст для перефразирования..."
                                       TextWrapping="Wrap"
                                       Foreground="#2C3E50"
                                       FontSize="13"
                                       LineHeight="18"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Правая колонка - Варианты перефразирования -->
            <Border Grid.Column="2" Background="#34495E" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="✨ Выберите вариант" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,10" 
                               Foreground="#ECF0F1"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="400">
                        <StackPanel x:Name="VariantsPanel" Margin="0">
                    
                            <!-- Вариант 1 -->
                            <Border x:Name="Variant1Border" BorderBrush="#3498DB" BorderThickness="2" CornerRadius="6" Margin="0,0,0,8" Padding="12" Background="#ECF0F1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Кастомный радио индикатор -->
                                    <Border Grid.Column="0" 
                                            Width="18" 
                                            Height="18" 
                                            CornerRadius="9" 
                                            BorderBrush="#3498DB" 
                                            BorderThickness="2" 
                                            Background="White"
                                            Margin="0,2,12,0"
                                            VerticalAlignment="Top"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Variant1Border_Click">
                                        <Ellipse x:Name="Variant1Indicator" 
                                                 Width="8" 
                                                 Height="8" 
                                                 Fill="#3498DB" 
                                                 Visibility="Collapsed"/>
                                    </Border>
                                    
                                    <!-- Контент -->
                                    <RadioButton Grid.Column="1" 
                                                 x:Name="Variant1RadioButton" 
                                                 Content="🔄 Загрузка вариантов..."
                                                 GroupName="ParaphraseVariants"
                                                 FontSize="12"
                                                 Foreground="#2C3E50"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Cursor="Hand"
                                                 Checked="Variant1RadioButton_Checked"
                                                 Unchecked="Variant1RadioButton_Unchecked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        <RadioButton.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#2C3E50" LineHeight="16" Cursor="Hand"/>
                                            </DataTemplate>
                                        </RadioButton.ContentTemplate>
                                    </RadioButton>
                                </Grid>
                            </Border>
                            
                            <!-- Вариант 2 -->
                            <Border x:Name="Variant2Border" 
                                    BorderBrush="#9B59B6" 
                                    BorderThickness="2" 
                                    CornerRadius="6" 
                                    Margin="0,0,0,8" 
                                    Padding="12"
                                    Background="#ECF0F1"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Кастомный радио индикатор -->
                                    <Border Grid.Column="0" 
                                            Width="18" 
                                            Height="18" 
                                            CornerRadius="9" 
                                            BorderBrush="#9B59B6" 
                                            BorderThickness="2" 
                                            Background="White"
                                            Margin="0,2,12,0"
                                            VerticalAlignment="Top"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Variant2Border_Click">
                                        <Ellipse x:Name="Variant2Indicator" 
                                                 Width="8" 
                                                 Height="8" 
                                                 Fill="#9B59B6" 
                                                 Visibility="Collapsed"/>
                                    </Border>
                                    
                                    <!-- Контент -->
                                    <RadioButton Grid.Column="1" 
                                                 x:Name="Variant2RadioButton" 
                                                 Content=""
                                                 GroupName="ParaphraseVariants"
                                                 FontSize="12"
                                                 Foreground="#2C3E50"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Cursor="Hand"
                                                 Checked="Variant2RadioButton_Checked"
                                                 Unchecked="Variant2RadioButton_Unchecked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        <RadioButton.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#2C3E50" LineHeight="16" Cursor="Hand"/>
                                            </DataTemplate>
                                        </RadioButton.ContentTemplate>
                                    </RadioButton>
                                </Grid>
                            </Border>
                            
                            <!-- Вариант 3 -->
                            <Border x:Name="Variant3Border" 
                                    BorderBrush="#E74C3C" 
                                    BorderThickness="2" 
                                    CornerRadius="6" 
                                    Margin="0,0,0,8" 
                                    Padding="12"
                                    Background="#ECF0F1"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Кастомный радио индикатор -->
                                    <Border Grid.Column="0" 
                                            Width="18" 
                                            Height="18" 
                                            CornerRadius="9" 
                                            BorderBrush="#E74C3C" 
                                            BorderThickness="2" 
                                            Background="White"
                                            Margin="0,2,12,0"
                                            VerticalAlignment="Top"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Variant3Border_Click">
                                        <Ellipse x:Name="Variant3Indicator" 
                                                 Width="8" 
                                                 Height="8" 
                                                 Fill="#E74C3C" 
                                                 Visibility="Collapsed"/>
                                    </Border>
                                    
                                    <!-- Контент -->
                                    <RadioButton Grid.Column="1" 
                                                 x:Name="Variant3RadioButton" 
                                                 Content=""
                                                 GroupName="ParaphraseVariants"
                                                 FontSize="12"
                                                 Foreground="#2C3E50"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Cursor="Hand"
                                                 Checked="Variant3RadioButton_Checked"
                                                 Unchecked="Variant3RadioButton_Unchecked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        <RadioButton.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#2C3E50" LineHeight="16" Cursor="Hand"/>
                                            </DataTemplate>
                                        </RadioButton.ContentTemplate>
                                    </RadioButton>
                                </Grid>
                            </Border>
                            
                            <!-- Оставить оригинал -->
                            <Border BorderBrush="#F39C12" BorderThickness="2" CornerRadius="6" Margin="0,8,0,0" Padding="12" Background="#FEF9E7">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Кастомный радио индикатор -->
                                    <Border Grid.Column="0" 
                                            Width="18" 
                                            Height="18" 
                                            CornerRadius="9" 
                                            BorderBrush="#F39C12" 
                                            BorderThickness="2" 
                                            Background="White"
                                            Margin="0,2,12,0"
                                            VerticalAlignment="Top"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="KeepOriginalBorder_Click">
                                        <Ellipse x:Name="KeepOriginalIndicator" 
                                                 Width="8" 
                                                 Height="8" 
                                                 Fill="#F39C12" 
                                                 Visibility="Collapsed"/>
                                    </Border>
                                    
                                    <!-- Контент -->
                                    <RadioButton Grid.Column="1" 
                                                 x:Name="KeepOriginalRadioButton" 
                                                 Content="⭐ Оставить исходный текст"
                                                 GroupName="ParaphraseVariants"
                                                 FontWeight="Bold"
                                                 FontSize="12"
                                                 Foreground="#D68910"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Cursor="Hand"
                                                 Checked="KeepOriginalRadioButton_Checked"
                                                 Unchecked="KeepOriginalRadioButton_Unchecked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                    </RadioButton>
                                </Grid>
                            </Border>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Кнопки управления -->
        <Border Grid.Row="2" Background="#34495E" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Кнопка Назад -->
                <Button Grid.Column="0" x:Name="PreviousButton" 
                        Content="⬅️ Назад" 
                        Padding="12,8" 
                        Margin="0,0,10,0"
                        IsEnabled="False"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="PreviousButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                    <Setter Property="Foreground" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Пустая колонка для центрирования -->
                <Grid Grid.Column="1"/>
                
                <!-- Кнопка Пропустить -->
                <Button Grid.Column="2" x:Name="SkipButton" 
                        Content="⏭️ Пропустить" 
                        Padding="12,8" 
                        Margin="0,0,10,0"
                        Background="#F39C12"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="SkipButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E67E22"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Кнопка Применить -->
                <Button Grid.Column="3" x:Name="ApplyButton" 
                        Content="✅ Применить" 
                        Padding="12,8" 
                        Margin="0,0,10,0"
                        IsEnabled="False"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Click="ApplyButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#85C1A5"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Кнопка Завершить -->
                <Button Grid.Column="4" x:Name="FinishButton" 
                        Content="🏁 Завершить" 
                        Padding="12,8"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="FinishButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
