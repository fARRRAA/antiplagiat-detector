<Window x:Class="Plagiat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plagiat"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Антиплагиат-Помощник" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Панель инструментов -->
        <hc:UniformSpacingPanel Grid.Row="0" Spacing="10" Margin="15,10" Orientation="Horizontal">
            <Button x:Name="NewProjectButton" 
                    Content="Новый проект" 
                    Style="{StaticResource ButtonPrimary}"
                    Click="NewProjectButton_Click"/>
            
            <Button x:Name="OpenProjectButton" 
                    Content="Открыть проект"
                    Click="OpenProjectButton_Click"/>
            
            <Button x:Name="SaveProjectButton" 
                    Content="Сохранить проект"
                    Click="SaveProjectButton_Click"/>
            
            <Separator Style="{StaticResource SeparatorVertical}"/>
            
            <Button x:Name="ImportDocumentButton" 
                    Content="Импорт документа"
                    Style="{StaticResource ButtonSuccess}"
                    Click="ImportDocumentButton_Click"/>
            
            <Button x:Name="CheckPlagiarismButton" 
                    Content="Проверить плагиат"
                    Style="{StaticResource ButtonWarning}"
                    Click="CheckPlagiarismButton_Click"
                    IsEnabled="False"/>
            
            <Button x:Name="ParaphraseAllButton" 
                    Content="Перефразировать всё"
                    Style="{StaticResource ButtonInfo}"
                    Click="ParaphraseAllButton_Click"
                    IsEnabled="False"/>
        </hc:UniformSpacingPanel>
        
        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Левая панель - Проекты и документы -->
            <hc:Card Grid.Column="0" Margin="0,0,0,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Проекты и документы" FontWeight="Bold" FontSize="14" Margin="15,15,15,10"/>
                    
                    <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,15">
                        <TreeView x:Name="ProjectsTreeView" 
                                  SelectedItemChanged="ProjectsTreeView_SelectedItemChanged">
                        </TreeView>
                    </hc:ScrollViewer>
                </Grid>
            </hc:Card>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
            
            <!-- Центральная панель - Редактор документа -->
            <hc:Card Grid.Column="2" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовок документа и статистика -->
                    <Grid Grid.Row="0" Margin="15,15,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="DocumentTitleTextBlock" 
                                       Text="Загрузите документ для начала работы" 
                                       FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="DocumentInfoTextBlock" 
                                       Text="" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <hc:CircleProgressBar Grid.Column="1" x:Name="UniquenessProgressBar" 
                                              Value="0" Maximum="100" 
                                              Width="60" Height="60"
                                              ShowText="True" 
                                              Text="{Binding Value, RelativeSource={RelativeSource Self}, StringFormat={}{0:F0}%}"
                                              Visibility="Collapsed"/>
                    </Grid>
                    
                    <!-- Текстовый редактор -->
                    <hc:ScrollViewer Grid.Row="1" Margin="15,0,15,10">
                        <RichTextBox x:Name="DocumentRichTextBox" 
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     FontFamily="Segoe UI"
                                     FontSize="12"
                                     TextChanged="DocumentRichTextBox_TextChanged"
                                     AllowDrop="True"
                                     Drop="DocumentRichTextBox_Drop"
                                     DragEnter="DocumentRichTextBox_DragEnter">
                        </RichTextBox>
                    </hc:ScrollViewer>
                    
                    <!-- Панель статуса -->
                    <Border Grid.Row="2" BorderThickness="0,1,0,0">
                        <Grid Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock x:Name="StatusTextBlock" 
                                           Text="Готов к работе" 
                                           VerticalAlignment="Center"/>
                                <hc:LoadingIndicator x:Name="LoadingIndicator" 
                                                     Width="16" Height="16" 
                                                     Margin="10,0,0,0"
                                                     Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="WordCountTextBlock" 
                                           Text="Слов: 0" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="CharCountTextBlock" 
                                           Text="Символов: 0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </hc:Card>
            
            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
            
            <!-- Правая панель - Результаты проверки -->
            <hc:Card Grid.Column="4" Padding="0">
                <hc:TabControl TabStripPlacement="Top">
                    <!-- Вкладка результатов плагиата -->
                    <hc:TabItem Header="Плагиат">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Статистика плагиата -->
                            <StackPanel Grid.Row="0" Margin="15,15,15,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Rectangle Width="12" Height="12" Fill="Red" Margin="0,0,5,0"/>
                                    <TextBlock Text="Критично: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="CriticalCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Rectangle Width="12" Height="12" Fill="Orange" Margin="0,0,5,0"/>
                                    <TextBlock Text="Внимание: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="WarningCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="12" Height="12" Fill="Green" Margin="0,0,5,0"/>
                                    <TextBlock Text="Допустимо: " VerticalAlignment="Center"/>
                                    <TextBlock x:Name="AcceptableCountTextBlock" Text="0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Список результатов -->
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,15">
                                <ListBox x:Name="PlagiarismResultsListBox" 
                                         SelectionChanged="PlagiarismResultsListBox_SelectionChanged">
                                </ListBox>
                            </hc:ScrollViewer>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка цитат -->
                    <hc:TabItem Header="Цитаты">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Найденные цитаты" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,10">
                                <ListBox x:Name="CitationsListBox">
                                </ListBox>
                            </hc:ScrollViewer>
                            
                            <ComboBox Grid.Row="2" x:Name="CitationStyleComboBox" 
                                      Margin="15,0,15,15"
                                      SelectionChanged="CitationStyleComboBox_SelectionChanged">
                                <ComboBoxItem Content="ГОСТ" Tag="GOST" IsSelected="True"/>
                                <ComboBoxItem Content="APA" Tag="APA"/>
                                <ComboBoxItem Content="MLA" Tag="MLA"/>
                                <ComboBoxItem Content="Chicago" Tag="Chicago"/>
                                <ComboBoxItem Content="Harvard" Tag="Harvard"/>
                                <ComboBoxItem Content="Vancouver" Tag="Vancouver"/>
                            </ComboBox>
                        </Grid>
                    </hc:TabItem>
                    
                    <!-- Вкладка библиографии -->
                    <hc:TabItem Header="Библиография">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Список литературы" FontWeight="Bold" Margin="15,15,15,10"/>
                            
                            <hc:ScrollViewer Grid.Row="1" Margin="5,0,5,10">
                                <ListBox x:Name="BibliographyListBox">
                                </ListBox>
                            </hc:ScrollViewer>
                            
                            <Button Grid.Row="2" x:Name="ExportBibliographyButton" 
                                    Content="Экспортировать библиографию"
                                    Margin="15,0,15,15"
                                    Click="ExportBibliographyButton_Click"/>
                        </Grid>
                    </hc:TabItem>
                </hc:TabControl>
            </hc:Card>
        </Grid>
        
        <!-- Строка состояния -->
        <hc:StatusBar Grid.Row="2">
            <hc:StatusBarItem>
                <TextBlock x:Name="AppStatusTextBlock" Text="Готов к работе"/>
            </hc:StatusBarItem>
            <hc:StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="VersionTextBlock" Text="v1.0.0"/>
            </hc:StatusBarItem>
        </hc:StatusBar>
    </Grid>
</Window>

