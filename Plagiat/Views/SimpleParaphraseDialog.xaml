<Window x:Class="Plagiat.Views.SimpleParaphraseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор варианта перефразирования" 
        Height="700" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Выберите подходящий вариант перефразирования"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Оригинальный текст -->
        <GroupBox Grid.Row="1" 
                  Header="📝 Оригинальный текст"
                  Foreground="White"
                  BorderBrush="#FF3F3F46"
                  BorderThickness="2"
                  Margin="0,0,0,20">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#FF0078D4"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <Border Background="#FF2D2D30" 
                    BorderBrush="#FF3F3F46"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="120">
                    <TextBlock x:Name="OriginalTextBlock"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontSize="13"
                               LineHeight="18"/>
                </ScrollViewer>
            </Border>
        </GroupBox>

        <!-- Варианты перефразирования со скроллом -->
        <GroupBox Grid.Row="2" 
                  Header="✨ Варианты перефразирования"
                  Foreground="White"
                  BorderBrush="#FF3F3F46"
                  BorderThickness="2"
                  Margin="0,0,0,20">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#FF0078D4"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <!-- Основной скролл для вариантов -->
            <ScrollViewer x:Name="VariantsScrollViewer"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Background="#FF1E1E1E"
                          Padding="10">
                <StackPanel x:Name="VariantsPanel" 
                            Background="Transparent"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button x:Name="RegenerateButton"
                    Content="🔄 Новые варианты"
                    Width="150"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF404040"
                    Foreground="White"
                    BorderBrush="#FF606060"
                    BorderThickness="1"
                    Click="RegenerateButton_Click"
                    Style="{DynamicResource ButtonStyle}"/>

            <Button x:Name="CancelButton"
                    Content="❌ Отмена"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF404040"
                    Foreground="White"
                    BorderBrush="#FF606060"
                    BorderThickness="1"
                    Click="CancelButton_Click"
                    Style="{DynamicResource ButtonStyle}"/>

            <Button x:Name="ApplyButton"
                    Content="✅ Применить"
                    Width="120"
                    Height="35"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderBrush="#FF005A9E"
                    BorderThickness="1"
                    IsEnabled="False"
                    Click="ApplyButton_Click"
                    Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
    </Grid>

    <!-- Стили для кнопок -->
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF303030"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                                <Setter Property="Foreground" Value="#FF888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

</Window>
